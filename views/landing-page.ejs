<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nursing Portal</title>
  <!-- Link to FontAwesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Link to the custom stylesheet -->
  <link rel="stylesheet" href="/css/mineaid-styles.css">
  <link rel="shortcut icon" href="favicon.png" type="image/x-icon">
</head>
<body class="landing-page-body">
  <div class="landing-page">

    <main>
        <section class="onboard">
            <!-- Fun question prompt -->
            <section>
                <p class="head">Welcome to the Nursing Management Services Portal for AGAHF</p>
                <p class="head">"NUMANS Portal"</p>
            </section>
            <h1>Are you a new or an existing user?</h1>
            <div class="btn-grp">
                <a href="#" class="reg-action success" onclick="document.getElementById('onboard_new').classList.toggle('shown')">New User</a>
                <a href="/login" class="reg-action btn-block">Existing User</a>
           </div>
        </section>
        
        <section id="onboard_new" class="onboard-new">
            <h2 class="hub-prompt">What's your mission?</h2>
            <!-- Option cards with icons and centered content -->
            <div class="options">
              <a href="/iaid" class="option-card iAid" title="I'm a First Aider">
                <div class="">
                    <div class="icon"><i class="fas fa-kit-medical"></i></div>
                    <div class="option-text"><h3>iAid</h3></div>
                </div>
              </a>
              <a href="/iemerge" class="option-card iEmerge" title="I'm an Emergency Nurse">
                <div class="">
                    <div class="icon"><i class="fas fa-heartbeat"></i></div>
                    <div class="option-text"><h3>iEmerge</h3></div>
                </div>
              </a>
              <a href="/isoup" class="option-card iSoup" title="I'm a Supervisor at AGAHF">
                <div class="">
                    <div class="icon"><i><img src="images/hot-soup.svg" alt="iSoup - Hot bowl of soup"></i></div>
                    <div class="option-text"><h3>iSoup</h3></div>
                </div>
              </a>
              <a href="/imanage" class="option-card iManage" title="I'm the Nurse Manager">
                <div class="">
                    <div class="icon"><i class="fas fa-cogs"></i></div>
                    <div class="option-text"><h3>iManage</h3></div>
                </div>
              </a>
            </div>
        </section>
    </main>
  </div>
  
  <script src="js/mineaid-scripts.js"></script>
</body>
</html>
