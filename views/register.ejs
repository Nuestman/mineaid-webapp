<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register - First Aid Portal</title>
  <link rel="stylesheet" href="/css/mineaid-styles.css">
  <link rel="shortcut icon" href="favicon.png" type="image/x-icon">
</head>
<body id="home">
      
    <header>
        <%- include('partials/_login-toggler') %>
        <h1>REGISTER:</h1>
    </header>
    
    <main class="login-main">
        <div class="container">
            <div class="form-container">
                <h2>Don't have an account yet? <br>Provide your details and a confirmation email will be sent to you.</h2>
                <div class="form-itself alert-parent">
    
                    <!-- Display flash messages if there are any -->
                    <% if (success_msg) { %>
                        <div class="alert alert-success"><%= success_msg %></div>
                    <% } %>
                    
                    <% if (error_msg) { %>
                        <div class="alert alert-danger"><%= error_msg %></div>
                    <% } %>
                    
                    <% if (error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                    
                    <form action="/register" method="POST">
                        <div class="input-grp">
                            <label for="firstname">First Name:</label>
                            <input type="text" id="firstname" name="firstname" required minlength="2">
                        </div>
                    
                        <div class="input-grp">
                            <label for="surname">Surname:</label>
                            <input type="text" id="surname" name="surname" required minlength="2">
                        </div>
                    
                        <div class="input-grp">
                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                    
                        <div class="input-grp">
                            <label for="username">Username:</label>
                            <input type="text" id="username" name="username" required minlength="4" maxlength="20" pattern="^[a-zA-Z0-9_]+$"
                                   title="Username can only contain letters, numbers, and underscores.">
                        </div>
                    
                        <div class="input-grp">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password" required minlength="6" oninput="checkPasswordsMatch()">
                        </div>
                    
                        <div class="input-grp">
                            <label for="confirm_password">Confirm Password:</label>
                            <input type="password" id="confirm_password" name="confirm_password" required minlength="6" oninput="checkPasswordsMatch()">
                            <small id="passwordMatchMessage" style="color: red; display: none;">Passwords do not match.</small>
                        </div>
                    
                        <div class="alert-btn-grp">
                            <button type="submit" class="btn">Register</button>
                            <button type="button" onclick="window.location.href='/login'" >Have an Account? Login</button>
                        </div>
                    </form>
                </div>
            </div>
            
            <script>
                function checkPasswordsMatch() {
                    const password = document.getElementById("password").value;
                    const confirmPassword = document.getElementById("confirm_password").value;
                    const message = document.getElementById("passwordMatchMessage");
            
                    if (confirmPassword && password !== confirmPassword) {
                        message.style.display = "inline"; // Show warning if passwords don't match
                    } else {
                        message.style.display = "none"; // Hide warning if passwords match
                    }
                }
            </script>
            

        </div>
    </main>

    <%- include('partials/_footer') %>
  
<script src="/js/mineaid-scripts.js"></script>
</body>
</html>