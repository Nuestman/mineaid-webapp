<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Details</title>
    <link rel="stylesheet" href="/css/mineaid-styles.css">
    <link rel="shortcut icon" href="favicon.png" type="image/x-icon">
    <style>
      .item-details {
        padding: 20px;
        max-width: 800px;
        margin: auto;
      }
      .item-header {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
      }
      .item-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 8px;
      }
      .item-info h1 {
        margin: 0;
        font-size: 1.8rem;
      }
      .item-info p {
        margin: 8px 0;
        color: #555;
      }
      .item-activity-log h2 {
        margin-top: 30px;
      }
      .item-activity-log ul {
        list-style: none;
        padding: 0;
      }
      .item-activity-log li {
        background: #f9f9f9;
        border: 1px solid #ddd;
        padding: 10px;
        margin-bottom: 8px;
        border-radius: 4px;
      }
    </style>
</head>
<body id="records_page">
        <header><%- include('../partials/_nav') %></header>
    <section class="prim-header table-page-head">
        <div class="container">
            <h1>ITEM DETAILS:</h1>
            <h2>Details of selected item</h2>
        </div>
    </section>
      
    <main class="item-details">
        <div class="item-header">
          <button class="nav-btn prev-btn" data-id="<%= prevItemId %>">←</button>
          <div class="item-content">
            <img src="<%= item.image_url %>" alt="<%= item.name %>" class="item-image">
            <div class="item-info">
              <h1><%= item.name %></h1>
              <p><%= item.description %></p>
              <p><strong>Item ID:</strong> <%= item.item_id %></p>
              <p><strong>Available Stock:</strong> <%= item.available_stock %></p>
            </div>
          </div>
          <button class="nav-btn next-btn" data-id="<%= nextItemId %>">→</button>
        </div>
      
        <section class="item-activity-log">
          <h2>Activity Log</h2>
          <% if (activities.length === 0) { %>
            <p>No activity recorded for this item yet.</p>
          <% } else { %>
            <ul>
              <% activities.forEach(activity => { %>
                <li><strong><%= activity.action %></strong> by User <%= activity.user_id %> on <%= activity.timestamp %></li>
              <% }); %>
            </ul>
          <% } %>
        </section>

      </main>

    <%- include('../partials/_footer') %>
    <script>
      document.querySelectorAll('.nav-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const itemId = btn.getAttribute('data-id');
          if (itemId) {
            window.location.href = `/inventory/item/${itemId}`;
          }
        });
      });
    </script>
    <script src="/js/mineaid-scripts.js"></script>
</body>
</html>

