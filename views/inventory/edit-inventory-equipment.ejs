<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Equipment Checklist - Inventory</title>
    <link rel="stylesheet" href="/css/mineaid-styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header><%- include('../partials/_nav') %></header>

    <div class="container">
        <div class="form-container">
            <div class="alert-parent">
                <h2>Add New Equipment</h2>
                <%- include('../partials/_flash-alert') %>
                <!-- Form to add new equipment -->
                <form action="/inventory/equipment-checklist" method="POST">
                    <div class="input-grp">
                        <label for="equipment_name">Equipment Name:</label>
                        <input type="text" id="equipment_name" name="equipment_name" class="form-control" required>
                    </div>
                    <div class="input-grp">
                        <label for="unit">Unit:</label>
                        <input type="text" id="unit" name="unit" class="form-control" required>
                    </div>
                    <div class="input-grp">
                        <label for="reorder_level">Reorder Level:</label>
                        <input type="number" id="reorder_level" name="reorder_level" class="form-control" required>
                    </div>
                    <div class="input-grp">
                        <label for="service_date">Service Date:</label>
                        <input type="date" id="service_date" name="service_date" class="form-control" required>
                    </div>
                    <div class="input-grp">
                        <label for="manufacturer">Manufacturer:</label>
                        <input type="text" id="manufacturer" name="manufacturer" class="form-control">
                    </div>
                    <div class="input-grp">
                        <label for="description">Description:</label>
                        <textarea id="description" name="description" class="form-control"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Equipment</button>
                </form>
            </div>
        </div>
        <div class="user-table-container wide-table">
            <h3>Existing Equipment</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Unit</th>
                        <th>Reorder Level</th>
                        <th>Service Date</th>
                        <th>Manufacturer</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% equipment.forEach(item => { %>
                        <tr>
                            <td><%= item.equipment_id %></td>
                            <td><%= item.equipment_name %></td>
                            <td><%= item.unit %></td>
                            <td><%= item.reorder_level %></td>
                            <td><%= item.service_date %></td>
                            <td><%= item.manufacturer %></td>
                            <td><%= item.description %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <footer><%- include('../partials/_footer') %></footer>
    <script src="/js/mineaid-scripts.js"></script>
</body>
</html>
