<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Consumables</title>
    <link rel="stylesheet" href="/css/mineaid-styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header><%- include('../partials/_nav') %></header>

    <div class="container">
        <h2>Add Consumables</h2>

        <%- include('../partials/_flash-alert') %>

        <!-- Form to add new consumable -->
        <form action="/inventory/add-consumable" method="POST">
            <div class="input-grp">
                <label for="consumable_name">Consumable Name:</label>
                <input type="text" id="consumable_name" name="consumable_name" class="form-control" required>
            </div>
            <div class="input-grp">
                <label for="category">Category</label>
                <select name="category" id="category" required>
                    <option value="Medication">Medication</option>
                    <option value="Consumable">Consumable</option>
                    <option value="Equipment">Equipment</option>
                </select>
            </div>
            <div class="input-grp">
                <label for="unit">Unit:</label>
                <input type="text" id="unit" name="unit" class="form-control" required>
            </div>
            <div class="input-grp">
                <label for="reorder_level">Reorder Level:</label>
                <input type="number" id="reorder_level" name="reorder_level" class="form-control" required>
            </div>
            <div class="input-grp">
                <label for="expiry_date">Expiry Date:</label>
                <input type="date" id="expiry_date" name="expiry_date" class="form-control" required>
            </div>
            <div class="input-grp">
                <label for="manufacturer">Manufacturer:</label>
                <input type="text" id="manufacturer" name="manufacturer" class="form-control">
            </div>
            <div class="input-grp">
                <label for="description">Description:</label>
                <textarea id="description" name="description" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add Consumable</button>
        </form>

        <h3>Existing Consumables</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Unit</th>
                    <th>Reorder Level</th>
                    <th>Expiry Date</th>
                    <th>Manufacturer</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <% consumables.forEach(consumable => { %>
                    <tr>
                        <td><%= consumable.consumable_id %></td>
                        <td><%= consumable.consumable_name %></td>
                        <td><%= consumable.unit %></td>
                        <td><%= consumable.reorder_level %></td>
                        <td><%= consumable.expiry_date %></td>
                        <td><%= consumable.manufacturer %></td>
                        <td><%= consumable.description %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <footer><%- include('../partials/_footer') %></footer>
    <script src="/js/mineaid-scripts.js"></script>
</body>
</html>
