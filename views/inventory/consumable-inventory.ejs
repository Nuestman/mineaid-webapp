<body class="inventory-table-body full-height">
    <header><%- include('../partials/_nav') %></header>

    <div class="container">
        
        <div class="inventory-table-container wide-table alert-parent">
            <h2>Manage Consumables</h2>
            <%- include('../partials/_flash-alert') %>
            
            <!-- Consumable Search and Filter -->
            <div class="search-container">
                <form action="/inventory/consumable-inventory" method="GET">
                    <div class="input-grp filter-grp">
                        <input type="text" name="search" placeholder="Search by name..." class="form-control">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>
            <!-- Consumable Table -->
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Consumable ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Unit</th>
                        <th>Reorder Level</th>
                        <th>Expiry Date</th>
                        <th>Manufacturer</th>
                        <th>Description</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% consumables.forEach(item => { %>
                        <tr>
                            <td><%= item.consumable_id %></td>
                            <td><%= item.consumable_name %></td>
                            <td><%= item.category %></td>
                            <td><%= item.unit %></td>
                            <td><%= item.reorder_level %></td>
                            <td><%= item.expiry_date %></td>
                            <td><%= item.manufacturer %></td>
                            <td><%= item.description %></td>
                            <td><%= item.created_at %></td>
                            <td>
                                <a href="/inventory/edit-consumable/<%= item.consumable_id %>" class="reg-action btn-approve">Edit</a>
                                <a href="/inventory/delete-consumable/<%= item.consumable_id %>" class="reg-action btn-block" onclick="return confirm('Are you sure you want to delete this consumable?')">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

