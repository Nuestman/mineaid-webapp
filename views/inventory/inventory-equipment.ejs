<body class="inventory-table-body full-height">
    <header><%- include('../partials/_nav') %></header>

    <div class="container">
        
        <div class="inventory-table-container wide-table">
            <div class="alert-parent">
                <h2>Manage Equipment</h2>
                <%- include('../partials/_flash-alert') %>
                <!-- Equipment Search and Filter -->
                <div class="search-container">
                    <form action="/inventory/inventory-equipment" method="GET">
                        <div class="input-grp filter-grp">
                            <input type="text" name="search" placeholder="Search by name..." class="form-control">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    </form>
                </div>
                <!-- Equipment List -->
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Equipment ID</th>
                            <th>Name</th>
                            <th>Unit</th>
                            <th>Reorder Level</th>
                            <th>Service Date</th>
                            <th>Manufacturer</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% equipment.forEach(item => { %>
                            <tr>
                                <td><%= item.equipment_id %></td>
                                <td><%= item.equipment_name %></td>
                                <td><%= item.unit %></td>
                                <td><%= item.reorder_level %></td>
                                <td><%= item.service_date %></td>
                                <td><%= item.manufacturer %></td>
                                <td><%= item.description %></td>
                                <td>
                                    <a href="/inventory/edit-equipment/<%= item.equipment_id %>" class="reg-action btn-approve">Edit</a>
                                    <a href="/inventory/delete-equipment/<%= item.equipment_id %>" class="reg-action btn-block" onclick="return confirm('Are you sure you want to delete this equipment?')">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

