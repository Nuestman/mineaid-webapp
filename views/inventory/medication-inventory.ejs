<body class="inventory-table-body full-height">
    <header><%- include('../partials/_nav') %></header>

    <div class="container">
        <div class="inventory-table-container wide-table alert-parent">
            <h2>Manage Medication Inventory</h2>
            <div class="alert-parent">
                <%- include('../partials/_flash-alert') %>
            </div>
            <!-- Medication Search and Filter -->
            <div class="search-container">
                <form action="/inventory/medication-inventory" method="GET">
                    <div class="input-grp filter-grp">
                        <input type="text" name="search" placeholder="Search by name..." class="form-control">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>
            <!-- Medication List -->
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Medication ID</th>
                        <th>Name</th>
                        <th>Unit</th>
                        <th>Reorder Level</th>
                        <th>Expiry Date</th>
                        <th>Manufacturer</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% medications.forEach(medication => { %>
                        <tr>
                            <td><%= medication.medication_id %></td>
                            <td><%= medication.medication_name %></td>
                            <td><%= medication.unit %></td>
                            <td><%= medication.reorder_level %></td>
                            <td><%= medication.expiry_date %></td>
                            <td><%= medication.manufacturer %></td>
                            <td><%= medication.description %></td>
                            <td>
                                <a href="/inventory/edit-medication/<%= medication.medication_id %>" class="reg-action btn-approve">Edit</a>
                                <a href="/inventory/delete-medication/<%= medication.medication_id %>" class="reg-action btn-block" onclick="return confirm('Are you sure you want to delete this medication?')">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
