<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medications - Inventory</title>
    <link rel="stylesheet" href="/css/mineaid-styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header><%- include('../partials/_nav') %></header>

    <div class="container">
        <h2>Manage Medications</h2>

        <%- include('../partials/_flash-alert') %>

        <!-- Form to add new medication -->
        <form action="/inventory/medications-checklist" method="POST">
            <div class="input-grp">
                <label for="medication_name">Medication Name:</label>
                <input type="text" id="medication_name" name="medication_name" class="form-control" required>
            </div>
            <div class="input-grp">
                <label for="dosage_form">Dosage Form:</label>
                <input type="text" id="dosage_form" name="dosage_form" class="form-control" required>
            </div>
            <div class="input-grp">
                <label for="unit">Unit:</label>
                <input type="text" id="unit" name="unit" class="form-control" required>
            </div>
            <div class="input-grp">
                <label for="reorder_level">Reorder Level:</label>
                <input type="number" id="reorder_level" name="reorder_level" class="form-control" required>
            </div>
            <div class="input-grp">
                <label for="expiry_date">Expiry Date:</label>
                <input type="date" id="expiry_date" name="expiry_date" class="form-control" required>
            </div>
            <div class="input-grp">
                <label for="manufacturer">Manufacturer:</label>
                <input type="text" id="manufacturer" name="manufacturer" class="form-control">
            </div>
            <div class="input-grp">
                <label for="description">Description:</label>
                <textarea id="description" name="description" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add Medication</button>
        </form>

        <h3>Existing Medications</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Dosage Form</th>
                    <th>Unit</th>
                    <th>Reorder Level</th>
                    <th>Expiry Date</th>
                    <th>Manufacturer</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <% medications.forEach(medication => { %>
                    <tr>
                        <td><%= medication.medication_id %></td>
                        <td><%= medication.medication_name %></td>
                        <td><%= medication.dosage_form %></td>
                        <td><%= medication.unit %></td>
                        <td><%= medication.reorder_level %></td>
                        <td><%= medication.expiry_date %></td>
                        <td><%= medication.manufacturer %></td>
                        <td><%= medication.description %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <footer><%- include('../partials/_footer') %></footer>
    <script src="../js/mineaid-scripts.js"></script>
</body>
</html>
