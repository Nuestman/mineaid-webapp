    <style>
        .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
    background-color: #fff;
    margin: 10% auto;
    padding: 20px;
    border: 1px solid #ccc;
    width: 50%;
    border-radius: 8px;
}

.close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
}

.close:hover,
.close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}

    </style>
</head>
<body class="inventory-table-body full-height">
    <header><%- include('../partials/_nav') %></header>

    <main class="">
        
        <div class="inventory-table-container wide-table">
            <div class="alert-parent">
                <h2>Manage Equipment</h2>
                <%- include('../partials/_flash-alert') %>
                <!-- Equipment Search and Filter -->
                <div class="filter-container search-container">
                    <form action="/inventory/equipment-inventory" method="GET">
                        <div class="input-grp filter-grp">
                            <input type="text" name="search" placeholder="Search by name..." class="form-control">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    </form>
                </div>
                <!-- Equipment List -->
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Equipment Location</th>
                            <th>Equipment ID</th>
                            <th>Name</th>
                            <th>Unit</th>
                            <th>Reorder Level</th>
                            <th>Status</th>
                            <th>Service Date</th>
                            <th>Manufacturer</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% equipment.forEach(item => { %>
                            <tr>
                                <td><%= item.equipment_location %></td>
                                <td><%= item.equipment_id %></td>
                                <td><%= item.equipment_name %></td>
                                <td><%= item.unit %></td>
                                <td><%= item.reorder_level %></td>
                                <td><%= item.equipment_status %></td>
                                <td><%= item.service_date %></td>
                                <td><%= item.manufacturer %></td>
                                <td><%= item.description %></td>
                                <td>
                                    <button 
                                        type="button" 
                                        class="reg-action success" 
                                        onclick='openModal(<%= JSON.stringify(item) %>)'>Edit</button> <br>
                                    <a href="/inventory/delete-inventory-equipment/<%= item.equipment_id %>" 
                                       class="reg-action danger" 
                                       onclick="return confirm('Are you sure you want to delete this equipment?')">
                                        Delete
                                    </a>
                                </td>
                                
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

