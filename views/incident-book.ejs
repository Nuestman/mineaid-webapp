<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Incident Book</title>
    <link rel="stylesheet" href="/css/mineaid-styles.css">
    <link rel="shortcut icon" href="favicon.png" type="image/x-icon">
</head>
<body class="incident-book">
    <header>
        <%- include('partials/_nav') %>
    </header>
    <section class="prim-header table-page-head">
        <h1 class="text-center">INCIDENT BOOK:</h1>
        <h2>First Aid Post Incidents</h2>
    </section>

    <main>
        <div class="table-page-container">
            <div class="wide-table">
                <div class="alert-parent">
                    <table > <!-- Optional: Add border for better visibility -->
                        <!-- Display flash messages if there are any -->
                        <% if (success_msg) { %>
                            <div class="alert alert-success"><%= success_msg %></div>
                        <% } %>
                
                        <% if (error_msg) { %>
                            <div class="alert alert-danger"><%= error_msg %></div>
                        <% } %>
                
                        <% if (error) { %>
                            <div class="alert alert-danger"><%= error %></div>
                        <% } %>
                        <thead class="accent">
                            <tr>
                            <th>Edit/Delete</th>
                            <th>ID</th>
                            <th>Post</th>
                            <th>Incident Date</th>
                            <th>Time of Incident</th>
                            <th>Company</th>
                            <th>Badge</th>
                            <th>Name</th>
                            <th>Incident Type</th>
                            <th>Incident Location</th>
                            <th>Incident Details</th>
                            <th>First Aid on Site?</th>
                            <th>Detained?</th>
                            <th>Treatment Given</th>
                            <th>Disposition</th>
                            <th>Disposition Time</th>
                            <th>Reporting</th>
                            <th>Entry By</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% incidents.forEach(incident => { %>
                            <tr>
                                <!-- Edit and Delete buttons -->
                                <td>
                                    <a href="/edit/incident/<%= incident.id %>" class="reg-action btn-approve">Edit</a>
                                    <form action="/delete/incident/<%= incident.id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="reg-action btn-block" onclick="return confirm('Are you sure you want to delete this entry?');">Delete</button>
                                    </form>
                                </td>
                                <td><%= incident.id %></td>
                                <td><%= incident.post %></td>
                                <td><%= incident.incident_date %></td>
                                <td><%= incident.incident_time %></td>
                                <td><%= incident.company %></td>
                                <td><%= incident.badge %></td>
                                <td><%= incident.name %></td>
                                <td><%= incident.incident_type %></td>
                                <td><%= incident.incident_location %></td>
                                <td><%= incident.incident_details %></td>
                                <td><%= incident.first_aid %></td>
                                <td><%= incident.detained %></td>
                                <td><%= incident.treatment_given %></td>
                                <td><%= incident.disposition %></td>
                                <td><%= incident.disposition_time %></td>
                                <td><%= incident.reporting %></td>
                                <td><%= user.firstname %></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Add download button -->
            <div class="btn-grp">
                <a href="/export" class="btn">Download as Excel</a>
                
                <a href="/" class="btn btn-outline">Home</a>
            </div>
            
        </div>
    </main>

    <%- include('partials/_footer') %>
    <script src="/js/mineaid-scripts.js"></script>
</body>
</html>
